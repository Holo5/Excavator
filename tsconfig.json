{
  "compilerOptions": {
    "target": "es5",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "allowJs": false,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "lib": ["es2015","DOM"],
    "module": "CommonJS",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "src/*": ["src/*"],
    },
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": [
    "node_modules/*",
    "**/dist/**",
    "**/test/**",
  ]
}